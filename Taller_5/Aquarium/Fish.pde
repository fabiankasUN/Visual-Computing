  public Fish( PImage texture, int fw, int fh ){
    this.texture = texture;
    this.fishWidth = fw;
    this.fishHeight = fh;
    x = int( randomNumber(-100,100) );
    y = int( randomNumber(-100,100) );
    z = int( randomNumber(-100,100) );
    
